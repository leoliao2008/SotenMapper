<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skycaster.sotenmapper.activity.SatelliteActivity">

    <com.skycaster.sotenmapper.widget.SatelliteMapView
        android:id="@+id/satellite_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_fix_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNFIX"
            android:background="#fff"/>
        <TextView
            android:id="@+id/tv_sat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫星数："
            android:background="#fff"/>
        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纬度："
            android:background="#fff"/>
        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经度："
            android:background="#fff"/>
        <TextView
            android:id="@+id/tv_alt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海拔："
            android:background="#fff"/>

    </LinearLayout>

</FrameLayout>
